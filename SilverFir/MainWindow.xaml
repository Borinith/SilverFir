<Window x:Class="SilverFir.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="SilverFir" Height="500" Width="750">
    <Grid x:Name="CommonWindow">
        <Grid x:Name="ResultBox">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBox x:Name="OutputBox"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     Grid.ColumnSpan="6"
                     Grid.RowSpan="4"
                     Grid.Column="1"
                     Grid.Row="2" />

            <Label Content="Доходность&#x0a;больше, чем:"
                   Name="YieldMore"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="0" />

            <xctk:IntegerUpDown Name="YieldMoreValue"
                                Width="90"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Increment="1"
                                Minimum="0"
                                Grid.Row="0"
                                Grid.Column="1" />

            <Label Content="Доходность&#x0a;меньше, чем:"
                   Name="YieldLess"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="2" />

            <xctk:IntegerUpDown Name="YieldLessValue"
                                Width="90"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Increment="1"
                                Minimum="0"
                                Grid.Row="0"
                                Grid.Column="3" />

            <Label Content="Объём&#x0a;эмиссии&#x0a;больше, чем:"
                   Name="IssueVolumeMore"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="4" />

            <xctk:IntegerUpDown Name="IssueVolumeMoreValue"
                                Width="90"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Increment="1"
                                Minimum="0"
                                Grid.Row="0"
                                Grid.Column="5" />

            <Label Content="Дней до&#x0a;погашения&#x0a;больше, чем:"
                   Name="DaysToMaturityMore"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="6" />

            <xctk:IntegerUpDown Name="DaysToMaturityMoreValue"
                                Width="90"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Increment="1"
                                Minimum="0"
                                Grid.Row="0"
                                Grid.Column="7" />

            <Label Content="Дней до&#x0a;погашения&#x0a;меньше, чем:"
                   Name="DaysToMaturityLess"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Grid.Row="1"
                   Grid.Column="6" />

            <xctk:IntegerUpDown Name="DaysToMaturityLessValue"
                                Width="90"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Increment="1"
                                Minimum="0"
                                Grid.Row="1"
                                Grid.Column="7" />

        </Grid>
    </Grid>
</Window>